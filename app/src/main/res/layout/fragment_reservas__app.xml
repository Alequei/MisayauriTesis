<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reservas_App">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginTop="44dp"
            android:text="Metodo de pago"
            android:textColor="@color/colorNegro"
            app:layout_constraintStart_toStartOf="@+id/sombreado"
            app:layout_constraintTop_toBottomOf="@+id/sombreado" />

        <ImageView
            android:id="@+id/sombreado1"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:src="@color/colorSombreado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/sombreado2"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="12dp"
            android:src="@color/colorSombreado"
            app:layout_constraintEnd_toEndOf="@+id/sombreado1"
            app:layout_constraintStart_toStartOf="@+id/sombreado1"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ImageView
            android:id="@+id/sombreado3"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="20dp"
            android:src="@color/colorSombreado"
            app:layout_constraintEnd_toEndOf="@+id/sombreado2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/sombreado2"
            app:layout_constraintTop_toBottomOf="@+id/nombre_reserva_id" />

        <ImageView
            android:id="@+id/sombreado4"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:src="@color/colorSombreado"
            app:layout_constraintEnd_toEndOf="@+id/sombreado3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/sombreado3"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageView
            android:id="@+id/sombreado"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:src="@color/colorSombreado"
            app:layout_constraintEnd_toEndOf="@+id/sombreado4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/sombreado4"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <ImageView
            android:id="@+id/sombreado6"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:src="@color/colorSombreado"
            app:layout_constraintEnd_toEndOf="@+id/sombreado4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/sombreado4"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <ImageView
            android:id="@+id/sombreado5"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="12dp"
            android:src="@color/colorSombreado"
            app:layout_constraintEnd_toEndOf="@+id/sombreado4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/sombreado4"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:text="Reservar Tratamiento"
            android:textColor="@android:color/background_dark"
            app:layout_constraintStart_toStartOf="@+id/sombreado1"
            app:layout_constraintTop_toBottomOf="@+id/sombreado1" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:text="Ubicacion del salon"
            android:textColor="@color/colorNegro"
            app:layout_constraintStart_toStartOf="@+id/sombreado3"
            app:layout_constraintTop_toBottomOf="@+id/sombreado3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Metodo de pago"
            android:textColor="@color/colorNegro"
            app:layout_constraintStart_toStartOf="@+id/sombreado5"
            app:layout_constraintTop_toBottomOf="@+id/sombreado5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="184dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Ubicacion del salon"
            android:gravity="center"
            android:textColor="@color/colorNegro"
            app:layout_constraintStart_toStartOf="@+id/sombreado4"
            app:layout_constraintTop_toBottomOf="@+id/sombreado4" />

        <TextView
            android:id="@+id/nombre_reserva_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:textColor="@color/colorNegro"
            android:layout_marginTop="20dp"
            android:text="Tratamiento Facial"
            app:layout_constraintStart_toStartOf="@+id/sombreado2"
            app:layout_constraintTop_toBottomOf="@+id/sombreado2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="136dp"
            android:text="S/.30.00"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/nombre_reserva_id"
            app:layout_constraintStart_toEndOf="@+id/nombre_reserva_id"
            app:layout_constraintTop_toTopOf="@+id/nombre_reserva_id"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/buscar_salon_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:text="Salon"
            android:textColor="@color/colorBlanco"
            android:background="@color/colorAzul"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.379" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
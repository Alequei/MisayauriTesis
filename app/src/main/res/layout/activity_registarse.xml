<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Activitys.Registarse">

    <EditText
        android:id="@+id/reg_usuario_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/reg_validarpassword_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Validar Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/reg_password_id"
        app:layout_constraintStart_toStartOf="@+id/reg_password_id"
        app:layout_constraintTop_toBottomOf="@+id/reg_password_id" />

    <EditText
        android:id="@+id/reg_password_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/reg_usuario_id"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/reg_usuario_id"
        app:layout_constraintTop_toBottomOf="@+id/reg_usuario_id" />

    <Button
        android:id="@+id/registrarse_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Registarce"
        app:layout_constraintEnd_toEndOf="@+id/reg_validarpassword_id"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/reg_validarpassword_id"
        app:layout_constraintTop_toBottomOf="@+id/reg_validarpassword_id" />
</androidx.constraintlayout.widget.ConstraintLayout>